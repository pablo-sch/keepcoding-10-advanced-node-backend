<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= appName || "My App" %></title>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="icon" type="image/png" href="/images/icon/icon.png" />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>

    <link rel="stylesheet" href="../stylesheets/common.css" />
  </head>

  <body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid flex-column">
        <!-- Primera fila: App name y botones -->
        <div class="d-flex w-100 justify-content-between align-items-center">
          <div class="d-flex align-items-center">
            <a href="/" class="d-flex align-items-center text-decoration-none">
              <img
                src="/images/icon/icon.png"
                alt="Logo"
                style="height: 30px; width: 30px"
                class="me-2"
              />
              <span class="navbar-brand app-name mb-0"><%= appName %></span>
            </a>

            <% if (user && user.id) { %>
            <a class="btn btn-primary ms-3" href="/new_product">Create Post</a>
            <% } %>
          </div>

          <% if (user && user.id) { %>
          <img
            src="<%= user.avatar && user.avatar.trim() !== '' ? '/avatars/' + user.avatar : '/images/placeholder/placeholder-image.jpg' %>"
            alt="Avatar"
            class="rounded-circle"
            style="height: 32px; width: 32px; object-fit: cover"
          />
          <% } %>

          <div class="d-flex">
            <% if (!user || !user.id) { %>
            <a class="btn btn-outline-primary me-2" href="/new_user"
              >Create Account</a
            >
            <a class="btn btn-success" href="/login">Login</a>
            <% } else { %>
            <a class="btn btn-outline-danger" href="/logout">Logout</a>
            <% } %>
          </div>
        </div>

        <!-- Segunda fila: Logged user -->
        <% if (user && user.name) { %>
        <div class="w-100 mt-2 ps-2">
          <span class="navbar-text fw-bold">Logged User: <%= user.name %></span>
        </div>
        <% } %>
      </div>
    </nav>
  </body>
</html>
