<% const totalPages = Math.ceil(totalProducts / limit); %> <% if (totalPages >
1) { %>
<nav class="mt-4">
  <ul class="pagination justify-content-center">
    <% if (currentPage > 1) { %>
    <li class="page-item">
      <a
        class="page-link"
        href="?<%= baseQuery %>&skip=<%= skip - limit %>&limit=<%= limit %>"
        ><%= __('Previous')%></a
      >
    </li>
    <% } %> <% for (let i = 1; i <= totalPages; i++) { const newSkip = (i - 1) *
    limit; %>
    <li class="page-item <%= i === currentPage ? 'active' : '' %>">
      <a
        class="page-link"
        href="?<%= baseQuery %>&skip=<%= newSkip %>&limit=<%= limit %>"
        ><%= i %></a
      >
    </li>
    <% } %> <% if (currentPage < totalPages) { %>
    <li class="page-item">
      <a
        class="page-link"
        href="?<%= baseQuery %>&skip=<%= skip + limit %>&limit=<%= limit %>"
        ><%= __('Next')%></a
      >
    </li>
    <% } %>
  </ul>
</nav>
<% } %>
